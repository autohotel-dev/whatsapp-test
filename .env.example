# ============================================
# WHATSAPP API CREDENTIALS
# ============================================
VERIFY_TOKEN=tu_token_de_verificacion_aqui
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id_aqui
FLOW_ID=tu_flow_id_aqui

# ============================================
# CLOUDINARY CREDENTIALS
# ============================================
CLOUDINARY_CLOUD_NAME=tu_cloud_name_aqui
CLOUDINARY_API_KEY=tu_api_key_aqui
CLOUDINARY_API_SECRET=tu_api_secret_aqui

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# DATABASE (OPCIONAL)
# ============================================
# Si no se configura, el bot funcionará sin persistencia
MONGODB_URI=mongodb://localhost:27017/hotel-luxor
# O usa MongoDB Atlas:
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/hotel-luxor

# ============================================
# OPENAI API (OPCIONAL)
# ============================================
# Para NLP avanzado, corrección de typos, y traducción
# Si no se configura, usará el sistema básico de detección
OPENAI_API_KEY=sk-tu_api_key_aqui

# ============================================
# EMAIL NOTIFICATIONS (OPCIONAL)
# ============================================
# Para recibir alertas por email
EMAIL_SERVICE=gmail
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_de_aplicacion_aqui
ADMIN_EMAIL=admin@autohoteluxor.com

# ============================================
# SLACK NOTIFICATIONS (OPCIONAL)
# ============================================
# Para recibir notificaciones en Slack
SLACK_WEBHOOK=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX

# ============================================
# GENERIC WEBHOOK (OPCIONAL)
# ============================================
# Para integrar con otros sistemas
NOTIFICATION_WEBHOOK=https://tu-sistema.com/webhook

# ============================================
# ANALYTICS SETTINGS
# ============================================
# Configuraciones opcionales para analytics
ANALYTICS_RETENTION_DAYS=90
CACHE_TIMEOUT_MINUTES=60

# ============================================
# RATE LIMITING
# ============================================
MAX_MESSAGES_PER_MINUTE=15
MIN_TIME_BETWEEN_MESSAGES=2000

# ============================================
# SESSION SETTINGS
# ============================================
SESSION_TIMEOUT_MINUTES=30
